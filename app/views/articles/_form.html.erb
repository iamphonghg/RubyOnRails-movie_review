<%= form_with model: article do |form| %>
  <div class="mt-2">
    <%= form.label :title, class: 'text-2xl text-blue-900' %><br>
    <%= form.text_field :title, class: 'w-full bg-gray-100 outline-none rounded' %>
  </div>
  <div class="mt-2">
    <%= form.label :body, class: 'text-2xl text-blue-900' %><br>
    <%= form.text_area :body, class: 'w-full bg-gray-100 outline-none rounded' %>
  </div>

  <div class="flex mt-2 space-x-2">
    <% if article.image.attached? %>
      <div class="w-1/2">
        <%= image_tag article.image %>
      </div>
    <% else %>
      <div class="w-1/2 flex m-auto justify-center">
        Image here
      </div>
    <% end %>
    <div class="w-1/2">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>
  </div>

  <div class="flex justify-center">
    <% if current_page?(:controller => 'articles', :action => 'new') %>
      <%= form.submit "ADD ARTICLE", class: 'font-bold mt-4 px-4 py-2 text-white bg-blue-900 hover:bg-blue-800' %>
    <% else %>
      <%= form.submit "SAVE", class: 'font-bold mt-4 px-4 py-2 text-white bg-blue-900 hover:bg-blue-800'%>
    <% end %>
  </div>
<% end %>
