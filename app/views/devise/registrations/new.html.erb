<div class="flex h-full">
  <div class="bg-white px-8 py-8 w-96 m-auto">
    <h2 class="text-center font-bold text-lg">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field mt-3">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full bg-gray-100 outline-none rounded' %>
      </div>

      <div class="field mt-2">
        <div class="flex flex-row space-x-1">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: 'w-full bg-gray-100 outline-none rounded' %>
      </div>

      <div class="field mt-2 flex flex-col">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full bg-gray-100 outline-none rounded' %>
      </div>
      <div class="text-red-500 mt-1">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="actions mt-8 flex flex-row justify-items-center justify-center">
        <%= f.submit "SIGN UP", class: 'px-4 py-2 text-white bg-blue-900 hover:bg-blue-700 cursor-pointer mr-3 font-semibold' %>
        <%= link_to 'LOG IN', new_user_session_path, class: 'px-4 py-2 text-white bg-blue-900 hover:bg-blue-700 font-semibold' %>
      </div>
    <% end %>

  </div>
</div>
